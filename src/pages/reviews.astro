    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-gradient-to-r from-amber-400 to-emerald-500">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-2xl p-6 transform hover:scale-105 transition-all duration-300">
          <div class="text-4xl font-bold text-white mb-2">4.9/5</div>
          <div class="text-amber-100">
            <i class="fas fa-star mr-1"></i> Average Rating
          </div>
        </div>
        <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-2xl p-6 transform hover:scale-105 transition-all duration-300">
          <div class="text-4xl font-bold text-white mb-2">12,500+</div>
          <div class="text-amber-100">
            <i class="fas fa-paw mr-1"></i> Happy Pets
          </div>
        </div>
        <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-2xl p-6 transform hover:scale-105 transition-all duration-300">
          <div class="text-4xl font-bold text-white mb-2">98%</div>
          <div class="text-amber-100">
            <i class="fas fa-grin-hearts mr-1"></i> Pet Parents
