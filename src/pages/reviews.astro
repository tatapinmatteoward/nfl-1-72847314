              <i class="fas fa-dog"></i>
            </div>
            <div class="text-amber-500">
              <i class="fas fa-heart"></i> Recommended
            </div>
          </div>
        </div>

        <!-- Review Card 2 -->
        <div class="bg-white rounded-3xl shadow-xl p-6 transform hover:-translate-y-2 transition-all duration-300 border-4 border-emerald-200 relative">
          <div class="absolute -top-4 -right-4 w-12 h-12 rounded-full bg-emerald-500 flex items-center justify-center text-white text-xl">
            <i class="fas fa-crown"></i>
          </div>
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-600 font-bold text-xl">
              M
            </div>
            <div class="ml-4">
              <h3 class="font-bold text-amber-800">@MeowMasterMax</h3>
              <div class="flex text-amber-500">
                <i class="fas fa-star"></i>
